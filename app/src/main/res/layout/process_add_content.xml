<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBack">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/taskinputtitle"
            android:text="流程标题" />

        <EditText
            android:id="@+id/Process_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:textSize="14sp"
            android:hint="请输入流程标题"
            android:background="@drawable/normal_bg"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/taskinputtitle"
            android:text="流程内容" />

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/Process_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/normal_bg"
            android:gravity="top"
            android:ems="10"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:hint="请输入流程内容"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/process_principal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:layout_marginTop="15dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="负责人" />

        <TextView
            android:id="@+id/executor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle"
            android:text="请选择执行人"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:src="@drawable/next" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/process_stime"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="开始时间" />

        <TextView
            android:id="@+id/tv_process_stime"
            android:layout_marginRight="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/process_etime"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="截止时间" />

        <TextView
            android:id="@+id/tv_process_etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle"
            android:text="请选择截止时间"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:src="@drawable/next" />

    </LinearLayout>

</LinearLayout>