<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="10dp"
    android:background="@drawable/task_item_bg">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fiber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fiber_p_24dp"
            />
        <TextView
            android:id="@+id/process_goal"
            android:layout_toRightOf="@id/fiber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Qwweweewew"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/process_method"
            android:layout_toRightOf="@id/fiber"
            android:layout_below="@id/process_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Dssdsd"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/executor"
            android:layout_toRightOf="@id/fiber"
            android:layout_below="@id/process_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行人:"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/deadline"
            android:layout_toRightOf="@id/fiber"
            android:layout_below="@id/executor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止时间:"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/executor_content"
            android:layout_toRightOf="@id/executor"
            android:layout_alignBottom="@id/executor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人事"/>
        <TextView
            android:id="@+id/deadline_content"
            android:layout_toRightOf="@id/deadline"
            android:layout_alignBottom="@id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-05-20 11:53:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/process_edit"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/edit"/>
        <ImageView
            android:id="@+id/process_delete"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/delete"
            android:scaleType="centerInside"/>
    </LinearLayout>

</LinearLayout>