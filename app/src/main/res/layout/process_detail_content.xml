<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBack">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/taskinputtitle"
            android:text="流程标题" />

        <TextView
            android:id="@+id/Process_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/taskinputtitle"
            android:text="流程内容" />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/Process_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:layout_marginTop="15dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="负责人" />

        <TextView
            android:id="@+id/process_principal"
            android:layout_marginRight="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="开始时间" />

        <TextView
            android:id="@+id/process_stime"
            android:layout_marginRight="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/dark_grey" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/menu_item_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textTitle"
            android:text="截止时间" />

        <TextView
            android:id="@+id/process_etime"
            android:layout_marginRight="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle" />



    </LinearLayout>

</LinearLayout>